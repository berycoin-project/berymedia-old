<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">All Records</h5>
          <h2 class="card-title">Wallets</h2>
        </div>
        <div class="card-body">
          <p id="notice"><%= notice %></p>
          <table>
            <thead>
              <tr>
                          <th>Name,</th>
                          <th>String</th>
                          <th>Balance</th>
                          <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @wallets.each do |wallet| %>
                <tr>
                            <td><%= wallet.name, %></td>
                            <td><%= wallet.string %></td>
                            <td><%= wallet.balance %></td>
                            <td><%= link_to 'Show', wallet %></td>
                  <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
                  <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Wallet', new_wallet_path %>
        </div>
      </div>
    </div>
  </div>
</div>