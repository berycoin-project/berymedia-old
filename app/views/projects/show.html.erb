<div class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12">
      <div class="card card-chart">
        <div class="card-header">
          <h5 class="card-category">Show Record</h5>
        </div>
        <div class="card-body">

        <p id="notice"><%= notice %></p>

                <p>
          <strong>Title:</strong>
          <%= @project.title %>
        </p>

                <p>
          <strong>Content:</strong>
          <%= @project.content.html_safe %>
        </p>

                <p>
          <strong>Budget:</strong>
          <%= @project.budget %>
        </p>

                <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-info" %> |
        <%= link_to 'Back', projects_path, class: "btn btn-default"%>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <%= form_for @comment, url: project_comments_path(@project.id) do |f| %>
        <div class="card card-chart">
          <div class="card-header">
            <h5 class="card-category">Comment Here</h5>
          </div>
          <div class="card-body">
            <div class="form-group">
              <%= f.text_area :content, class: 'form-control', placeholder: 'Type comment here' %>
            </div>
            <div class="actions">
              <%= f.submit class: 'btn btn-info' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-12 col-md-12">
      <% @comments.each do |c| %>
        <div class="card card-chart">
          <div class="card-header">
            <h5 class="card-category"><%= c.users.first.name %> says</h5>
          </div>
          <div class="card-body">
            <div class="col-lg-12">
              <p>
                <i class="fa fa-comments"></i> <%= c.content %>
              </p>
            </div>
            <div class="col-lg-4">
              <i class="fa fa-clock-o text-info">
                          <span>
                            <%= time_ago_in_words c.created_at %> ago
                          </span>
              </i>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <%= @project.title %>
<% end %>
<% content_for :short do %>
  <%= " We are planning to create a web application for all the dentists, providing them an online resource, through which they can interact with their patients " %>
<% end %>
<% content_for :lins do %>
  <a href=""> Reward: <b>5000</b> </a>
  |
  <a href=""> <i class="fa fa-comments"></i> <%= @comments.count %> </a>
  |
  <a href="http://localhost:3000/users/<%= @project.users.first.id %>"> by <%= @project.users.first.name %> </a>
<% end %>